<%= form_with(model: information, local: true) do |form| %>
  <% if information.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(information.errors.count, "error") %> prohibited this information from being saved:</h2>
      <ul>
        <% information.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= contact_id_setter(@contact_id, information) %>
  <div class="form-group">
    <%= form.label :telephone %>
    <%= form.number_field :telephone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit "Create new information", class: "btn btn-lg btn-primary btn-block"%>
  </div>
<% end %>
